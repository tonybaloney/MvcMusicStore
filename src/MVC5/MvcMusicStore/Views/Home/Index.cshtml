@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div class="row text-center">
        <img src="~/Images/home-showcase.png" class="img-fluid w-100"/>
    </div>
</div>
<ul class="row list-unstyled" id="album-list">
    @foreach (var album in Model)
    {
        <li class="col-lg-2 col-md-2 col-sm-2 col-xs-4 container">
            <a href="@Url.Action("Details", "Store", new { id = album.AlbumId })">
                <img alt="@album.Title" class="img-thumbnail" src="@Url.Content( @album.AlbumArtUrl)" />
                <h4>@album.Title</h4>
            </a>
        </li>
    }
</ul>
