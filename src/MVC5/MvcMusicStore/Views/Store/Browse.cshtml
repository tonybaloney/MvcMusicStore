@model MvcMusicStore.Models.Genre
@{
    ViewBag.Title = "Browse Albums";
}
<div class="genre">
    <h3>
        <em>@Model.Name</em> Albums
    </h3>

    <ul id="album-list" class="list-unstyled row">
        @foreach (var album in Model.Albums)
        {
            <li class="col-lg-2 col-md-3 col-sm-4 col-6">
                <a href="@Url.Action("Details", new { id = album.AlbumId })">
                    @if (!string.IsNullOrEmpty(album.AlbumArtUrl))
                    {
                        <img alt="@album.Title" class="img-thumbnail" src="@Url.Content(@album.AlbumArtUrl)" />
                    }
                    <h5 class="control-label">@album.Title</h5>
                </a>
            </li>
        }
    </ul>
</div>